{
  "name": "@dominatrix/server",
  "version": "0.4.0",
  "description": "WebSocket bridge server for DOMINATRIX",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dominatrix-server": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.13",
    "typescript": "^5.7.2"
  }
}
